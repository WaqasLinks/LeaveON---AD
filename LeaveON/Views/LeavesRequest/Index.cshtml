@model IEnumerable<Repository.Models.Leave>

@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTables -->
<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">



<!-- DataTables -->
<script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>


<form id="LeaveRequestIndex" action="login.cgi" method="post" autocomplete="off">

  <section class="content">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">
              My Leaves History

            </h3>
          </div>


          <div class="card-body">
            @Html.ActionLink("Apply Leave", "Create")
            <div d="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
              <div class="row">
                <div class="col-sm-12 col-md-6">
                </div>
                <div class="col-sm-12 col-md-6"></div>
              </div>
              <div class="row">
                <div class="col-sm-12">

                  <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="example2_info">
                    <thead>
                      <tr role="row">
                        <th style="display:none">
                          No.
                        </th>
                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="StartDate: activate to sort column ascending" aria-sort="descending">
                          Request Date
                        </th>
                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="StartDate: activate to sort column ascending" aria-sort="descending">
                          @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="EndDate: activate to sort column ascending" aria-sort="descending">
                          @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" aria-sort="descending">
                          @Html.DisplayNameFor(model => model.LeaveType.Name)
                        </th>

                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="TotalDays: activate to sort column ascending" aria-sort="descending">
                          @Html.DisplayNameFor(model => model.TotalDays)
                        </th>
                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Reason: activate to sort column ascending" aria-sort="descending">
                          @Html.DisplayNameFor(model => model.Reason)
                        </th>


                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="IsAccepted1: activate to sort column ascending" aria-sort="descending">
                          @*@Html.DisplayNameFor(model => model.IsAccepted1)*@
                          Line Manager 1
                        </th>

                        <th class="sorting_desc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="IsAccepted2: activate to sort column ascending" aria-sort="descending">
                          @*@Html.DisplayNameFor(model => model.IsAccepted2)*@
                          Line Manager 2
                        </th>

                        <th></th>
                      </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                      <tr role="row" class="odd">
                        <td style="display:none">
                          @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.LeaveType.Name)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.TotalDays)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Reason)
                        </td>



                        <td>
                          @*@Html.DisplayFor(modelItem => item.IsAccepted1)*@
                          @if (item.IsAccepted1 != null && item.IsAccepted1 > 0)
                          {
                            <p style="color:green"><b> Accepted </b></p>
                            <p style="color:green;font-size:80%;">@item.Remarks1</p>
                            
                          }
                          @if (item.IsAccepted1 != null && item.IsAccepted1 == 0)
                          {
                            <p style="color:red"><b> Rejected </b></p>
                            <p style="color:red;font-size:80%;">@item.Remarks1</p>
                          }
                        </td>

                        <td>
                          @*@Html.DisplayFor(modelItem => item.IsAccepted2)*@
                          @if (item.IsAccepted2 != null && item.IsAccepted2 > 0)
                          {
                            <p style="color:green"><b> Accepted </b></p>
                            <p style="color:green;font-size:80%;">@item.Remarks2</p>

                          }
                          @if (item.IsAccepted2 != null && item.IsAccepted2 == 0)
                          {
                            <p style="color:red"><b> Rejected </b></p>
                            <p style="color:red;font-size:80%;">@item.Remarks2</p>

                          }
                        </td>


                        <td>
                          @*@if ((item.IsAccepted1 == null && item.IsAccepted2 == null))
                            {
                              @Html.ActionLink("Edit", "Edit", new { id = item.Id }); <span> | </span>
                              @Html.ActionLink("Delete", "Delete", new { id = item.Id });
                            }*@
                        </td>
                      </tr>

                    }
                    @*<tfoot>
                        <tr>
                        </tr>
                      </tfoot>*@




                  </table>


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</form>

<!-- page script -->
<script>
  $(function () {

    $('#example2').DataTable({
      "paging": false,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": false,
      "autoWidth": false,
      "responsive": true,
      "order": [[0, "desc"]]
    });
  });
</script>

