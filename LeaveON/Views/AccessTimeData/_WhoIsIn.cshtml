                        <th>
                          @Html.DisplayNameFor(model => model.Time_OUT)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.ReaderID_OUT)
                        </th>
                        <th>
                          @Html.DisplayNameFor(model => model.DeviceName_OUT)
                        </th>
