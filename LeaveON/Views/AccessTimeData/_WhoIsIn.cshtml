                          @Html.DisplayFor(modelItem => item.EmployeeNumber)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.DepartmentID)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.DepartmentName)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Date_IN)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Day_IN)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Time_IN)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.ReaderID_IN)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.DeviceName_IN)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Date_OUT)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Day_OUT)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Time_OUT)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.ReaderID_OUT)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.DeviceName_OUT)
                        </td>
                        <td>

                          @{
                            int val = (int)item.Duration;
                            TimeSpan minutes = TimeSpan.FromMinutes(val);

                            @*<text>@minutes.ToString("hh':'mm':'ss")</text>*@
                            <text>@minutes.ToString("hh':'mm")</text>
                          }

